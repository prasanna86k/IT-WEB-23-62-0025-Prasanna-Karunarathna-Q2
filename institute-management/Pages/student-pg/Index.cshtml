@page
@model institute_management.Pages.student_pg.IndexModel

@{
    ViewData["Title"] = "Index";
}
<div class="p-5 home-hero-hieght">
<h1>Students Detail</h1>

<p>
        <a asp-page="Create"><button class="btn btn-primary"><i class="fa-solid fa-plus"></i> Create New</button></a>
</p>

<div class="col-sm-12 col-md-10 col-lg-8 ">
        <table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.student[0].StudentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.student[0].StudentCity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.student[0].CourseID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.student) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseID)
            </td>
            <td>
                            <a asp-page="./Edit" asp-route-id="@item.StudentId"><button class="btn btn-sm btn-secondary "><i class="fa-solid fa-pen-to-square"></i>Edit</button></a> |
                            <a asp-page="./Details" asp-route-id="@item.StudentId"><button class="btn btn-sm btn-secondary "><i class="fa-regular fa-file-lines"></i>Details</button></a> |
                            <a asp-page="./Delete" asp-route-id="@item.StudentId"><button class="btn btn-sm btn-secondary "><i class="fa-solid fa-delete-left"></i>Delete</button></a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
