@page
@model institute_management.Pages.course_pg.CreateModel

@{
    ViewData["Title"] = "Create";
}
<div class="p-5">
	<h1>Create</h1>

	<h4>Add New Course</h4>
	<hr />
	<div class="col-sm-12 col-md-8 col-lg-6 ">
		<div class="row home-hero-hieght">
		<div class="col-md-4 ">
			<form method="post">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group mb-1">
					<label asp-for="course.CourseName" class="control-label"></label>
					<input asp-for="course.CourseName" class="form-control" />
					<span asp-validation-for="course.CourseName" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="course.LectureName" class="control-label"></label>
					<input asp-for="course.LectureName" class="form-control" />
					<span asp-validation-for="course.LectureName" class="text-danger"></span>
				</div>
				<div class="form-group mt-3">
					<input type="submit" value="Add" class="btn btn-primary" />
				</div>
			</form>
		</div>
	</div>

	<div>
			<a asp-page="Index"><button class="btn btn-primary mt-1">Back to List</button></a>
	</div>
	</div>
	@section Scripts {
		@{
			await Html.RenderPartialAsync("_ValidationScriptsPartial");
		}
	}

</div>
