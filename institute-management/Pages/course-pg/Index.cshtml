@page
@model institute_management.Pages.course_pg.IndexModel

@{
    ViewData["Title"] = "Courses";
}

<div class="p-5 home-hero-hieght">
	<h1>Courses</h1>

	<p>
		<a asp-page="Create"><button class="btn btn-primary"><i class="fa-solid fa-plus"></i> Add New </button> </a>
	</p>

	<div class="col-sm-12 col-md-10 col-lg-8 ">
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>
						@Html.DisplayNameFor(model => model.course[0].CourseName)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.course[0].LectureName)
					</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model.course)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => item.CourseName)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.LectureName)
						</td>
						<td>
							<a asp-page="./Edit" asp-route-id="@item.CourseID"><button class="btn btn-sm btn-secondary "><i class="fa-solid fa-pen-to-square"></i> Edit</button></a> |
							<a asp-page="./Details" asp-route-id="@item.CourseID"> <button class="btn btn-sm btn-secondary"><i class="fa-regular fa-file-lines"></i> Details</button></a> |
							<a asp-page="./Delete" asp-route-id="@item.CourseID"><button class="btn btn-sm btn-secondary"><i class="fa-solid fa-delete-left"></i> Delete</button></a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>


